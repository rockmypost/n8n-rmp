# N8N RockMyPost Configuration
# Copy this file to .env and update values

# Domain Configuration
N8N_HOST=n8n.rockmypost.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.rockmypost.com/
VUE_APP_URL=https://n8n.rockmypost.com/
TIMEZONE=America/Argentina/Buenos_Aires

# SSL Configuration
LETSENCRYPT_EMAIL=rockmypost@gmail.com

# User Management
N8N_USER_MANAGEMENT_DISABLED=false
N8N_OWNER_EMAIL=rockmypost@gmail.com
N8N_OWNER_PASSWORD=RockMyPost2024!Secure#N8N

# Security
N8N_BASIC_AUTH_ACTIVE=false

# Google OAuth Integration (Optional)
# Get from: https://console.cloud.google.com/
# Redirect URI: https://n8n.rockmypost.com/rest/oauth2-credential/callback
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Performance Settings
N8N_PAYLOAD_SIZE_MAX=16777216
N8N_METRICS=false
N8N_LOG_LEVEL=info
N8N_PERSISTED_BINARY_DATA_TTL=1440

# Important Notes:
# 1. Change N8N_OWNER_PASSWORD to a secure password
# 2. Never commit .env file to git
# 3. DNS must point n8n.rockmypost.com to 13.59.208.230
# 4. SSL certificates generate automatically on first run